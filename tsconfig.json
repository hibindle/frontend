{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"baseUrl": "./",
		"paths": {
			"@components/*": ["./src/components/*"],
			"@utils/*": ["./src/utils/*"],
			"@styles/*": ["./styles/*"],
			"@icons/*": ["./src/icons/*"],
			"@illustrations/*": ["./src/illustrations/*"],
			"Typography": ["./src/Typography/index.tsx"],
			"variables": ["./src/variables/index.ts"],
			"@static/*": ["./static/*"],
			"@higher-order-components/*": ["./higher-order-components/*"],
			"@content/*": ["./content/*"],
			"@src/*": ["./src/*"],
			"@pages-code/*": ["./pages-code/*"],
			"@pages/*": ["./pages/*"],
			"@server/*": ["./server/*"],
			"@typings/*": ["./typings/*"],
			"store/*": ["./src/store/*"]
		}
	},
	"exclude": ["node_modules"],
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
